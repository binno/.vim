[diff]
    tool = meld

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = kdiff3
    conflictstyle = diff3 # Three file comparision (Base = Common Ancestor, Local = Current Branch, Remote = Merge in Branch)

[mergetool]
    prompt = false

[clean]
    requireForce = false

[tig "bind"]
    generic = D !git difftool --tool=vimdiff --no-prompt %(commit)^ %(commit)
