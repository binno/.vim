[user]
	name = bshen
	email = bshen@marvell.com

[color]
    diff = auto
    status = auto
    branch = auto
    
[core]
    editor = vim -X
    pager = less -FXRS

[alias]
	addi = add -i
	rmc = rm --cached

    co = checkout
    cos = checkout --track git-svn -b
    cob = checkout -b
    cod = checkout --

    ci = commit -a
    cia = commit --amend

    di = diff
    st = status
	stm = status -uno

    br = branch
    bra = branch -a
    brd = branch -D

    re = remote

    lg = log --pretty="%Cblue[%Creset%h%Cblue]%Cgreen<%an>%Creset%s%Cred(%ad)" --date=short --abbrev-commit -10
    lga = log --pretty="%Cblue[%Creset%h%Cblue]%Cgreen<%an>%Creset%s%Cred(%ad)" --date=short --abbrev-commit
    lgp = log -p 
	lgs = log --stat -1

    bl = blame
    so = show
    bs = bisect

    rsh = reset --hard
    rss = reset --soft
	rs = reset HEAD

    #git arc --prefix=[dir name] HEAD -o [name].tar.gz
    arc = archive --format=tar
    rb = rebase -i

    fp= format-patch
    ap= apply --reject
    gp= grep -n
    cp= cherry-pick
	mg= merge
	d = difftool

